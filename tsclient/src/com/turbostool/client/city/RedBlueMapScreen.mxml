             alphaFrom="0.1" alphaTo="0.7"
             duration="300"
             blurXFrom="0" blurYFrom="0"
             blurXTo="15" blurYTo="15"/>

    <mx:Glow id="houseGlowIn"
             color="0xffffff"
             alphaFrom="0.1" alphaTo="0.7"
             duration="300"
             blurXFrom="0" blurYFrom="0"
             blurXTo="15" blurYTo="15"/>

    <mx:Glow id="houseGlowOut"
             color="0xffffff"
             alphaFrom="0.7" alphaTo="0.1"
             duration="300"
             blurXFrom="15" blurYFrom="15"
             blurXTo="0" blurYTo="0"/>

